# YouTube Data API v3
# Get your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Spotify Web API
# Get credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/auth/callback/spotify

# Apple Music API (Optional)
# Get from: https://developer.apple.com/music/
APPLE_MUSIC_KEY_ID=your_apple_music_key_id_here
APPLE_MUSIC_TEAM_ID=your_apple_music_team_id_here
APPLE_MUSIC_PRIVATE_KEY=your_apple_music_private_key_here

# Amazon Music API (Optional)
# Contact Amazon for API access
AMAZON_MUSIC_CLIENT_ID=your_amazon_music_client_id_here
AMAZON_MUSIC_CLIENT_SECRET=your_amazon_music_client_secret_here

# Application URL (for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com
